{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agentplane.dev/schemas/recipe-manifest.schema.json",
  "title": "agentplane recipe manifest (v1)",
  "type": "object",
  "additionalProperties": true,
  "required": ["schema_version", "id", "version", "name", "summary", "description"],
  "properties": {
    "schema_version": { "type": "string", "const": "1" },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]*$",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*)?(?:\\+[0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*)?$"
    },
    "name": { "type": "string", "minLength": 1 },
    "summary": { "type": "string", "minLength": 1, "maxLength": 200 },
    "description": { "type": "string", "minLength": 1 },
    "tags": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "agents": {
      "type": "array",
      "items": { "$ref": "#/$defs/agent" }
    },
    "tools": {
      "type": "array",
      "items": { "$ref": "#/$defs/tool" }
    },
    "scenarios": {
      "type": "array",
      "items": { "$ref": "#/$defs/scenario" }
    }
  },
  "$defs": {
    "agent": {
      "type": "object",
      "additionalProperties": true,
      "required": ["id", "display_name", "file"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "display_name": { "type": "string", "minLength": 1 },
        "file": { "type": "string", "minLength": 1 }
      }
    },
    "tool": {
      "type": "object",
      "additionalProperties": true,
      "required": ["id", "runtime", "entrypoint", "summary"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "runtime": { "type": "string", "enum": ["node", "bash"] },
        "entrypoint": { "type": "string", "minLength": 1 },
        "summary": { "type": "string", "minLength": 1, "maxLength": 200 },
        "permissions": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "scenario": {
      "type": "object",
      "additionalProperties": true,
      "required": ["id", "summary", "steps"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "summary": { "type": "string", "minLength": 1, "maxLength": 200 },
        "steps": {
          "type": "array",
          "items": { "type": "object" }
        }
      }
    }
  }
}
