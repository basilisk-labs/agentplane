{
  "name": "agentplane",
  "version": "0.1.0",
  "description": "Agent Plane CLI for task workflows, recipes, and project automation.",
  "keywords": [
    "agentplane",
    "agent-plane",
    "cli",
    "tasks",
    "workflow",
    "recipes",
    "automation",
    "orchestration"
  ],
  "license": "MIT",
  "author": "Basilisk Labs",
  "repository": {
    "type": "git",
    "url": "https://github.com/basilisk-labs/agentplane.git"
  },
  "homepage": "https://github.com/basilisk-labs/agentplane",
  "bugs": {
    "url": "https://github.com/basilisk-labs/agentplane/issues"
  },
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "agentplane": "bin/agentplane.js"
  },
  "files": [
    "bin",
    "dist",
    "assets",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "node -e \"require('node:fs').rmSync('dist',{recursive:true,force:true}); require('node:fs').rmSync('tsconfig.tsbuildinfo',{force:true});\"",
    "build": "tsc -b",
    "typecheck": "tsc -b",
    "prepare": "npm run build",
    "prepack": "npm run clean && npm run build",
    "prepublishOnly": "npm run prepack"
  },
  "dependencies": {
    "@agentplane/core": "0.1.0"
  }
}
