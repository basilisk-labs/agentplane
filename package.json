{
  "name": "agentplane-repo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.3.6",
  "scripts": {
    "postinstall": "lefthook install",
    "build": "tsc -b",
    "typecheck": "tsc -b",
    "test": "bun run test:fast",
    "test:fast": "vitest run --exclude \"**/cli-smoke.test.ts\" --exclude \"**/run-cli*.test.ts\"",
    "test:agentplane": "vitest run packages/agentplane/src --exclude \"**/cli-smoke.test.ts\" --exclude \"**/run-cli*.test.ts\"",
    "test:core": "vitest run packages/core/src",
    "test:recipes": "vitest run packages/recipes/src",
    "test:testkit": "vitest run packages/testkit/src",
    "test:cli": "vitest run packages/agentplane/src/run-cli.core.test.ts packages/agentplane/src/run-cli.recipes.test.ts packages/agentplane/src/run-cli.scenario.test.ts --hookTimeout 60000 --testTimeout 60000",
    "test:cli:core": "vitest run packages/agentplane/src/run-cli.core.test.ts --hookTimeout 60000 --testTimeout 60000",
    "test:cli:recipes": "vitest run packages/agentplane/src/run-cli.recipes.test.ts --hookTimeout 60000 --testTimeout 60000",
    "test:cli:scenario": "vitest run packages/agentplane/src/run-cli.scenario.test.ts --hookTimeout 60000 --testTimeout 60000",
    "test:cli:smoke": "vitest run packages/agentplane/src/cli-smoke.test.ts --hookTimeout 60000 --testTimeout 60000",
    "test:full": "vitest run",
    "coverage": "vitest run --coverage",
    "ci": "bun run format:check && bun run typecheck && bun run lint && bun run coverage",
    "ci:agentplane": "node scripts/ci-scope.mjs --scope agentplane",
    "ci:core": "node scripts/ci-scope.mjs --scope core",
    "ci:recipes": "node scripts/ci-scope.mjs --scope recipes",
    "ci:spec": "node scripts/ci-scope.mjs --scope spec",
    "ci:testkit": "node scripts/ci-scope.mjs --scope testkit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "hooks:install": "lefthook install"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^17.1.0",
    "lefthook": "^2.0.16",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
