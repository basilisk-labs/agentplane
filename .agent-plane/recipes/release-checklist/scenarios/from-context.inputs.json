{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Release checklist - from release context",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "release_slug": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9][a-z0-9-]{1,63}$",
      "description": "Short slug for output files and paths."
    },
    "release_title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 140,
      "description": "Human-readable release title."
    },
    "deploy_targets": {
      "type": "string",
      "minLength": 3,
      "description": "Target environments or services."
    },
    "rollout_steps": {
      "type": "string",
      "default": "",
      "description": "Preferred rollout steps (bullet list)."
    },
    "verification_steps": {
      "type": "string",
      "default": "",
      "description": "Verification steps after deploy."
    },
    "rollback_plan": {
      "type": "string",
      "default": "",
      "description": "Rollback steps or decision criteria."
    },
    "risk_areas": {
      "type": "string",
      "default": "",
      "description": "Known release risks."
    },
    "communications": {
      "type": "string",
      "default": "",
      "description": "Stakeholder comms or announcements."
    },
    "constraints": {
      "type": "string",
      "default": "",
      "description": "Constraints (time, tooling, approvals)."
    },
    "runs_dir": {
      "type": "string",
      "default": ".agent-plane/.runs",
      "description": "Directory for run artifacts."
    }
  },
  "required": [
    "release_slug",
    "release_title",
    "deploy_targets"
  ]
}
