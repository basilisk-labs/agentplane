{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Docs scaffold - from feature context",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "docs_slug": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9][a-z0-9-]{1,63}$",
      "description": "Short slug for the docs file path."
    },
    "doc_title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 140,
      "description": "Human-readable document title."
    },
    "feature_summary": {
      "type": "string",
      "minLength": 10,
      "description": "Short summary of the feature or workflow."
    },
    "audience": {
      "type": "string",
      "default": "",
      "description": "Target audience or persona."
    },
    "prerequisites": {
      "type": "string",
      "default": "",
      "description": "Prerequisites (bullet list)."
    },
    "step_overview": {
      "type": "string",
      "default": "",
      "description": "High-level steps or flow."
    },
    "examples": {
      "type": "string",
      "default": "",
      "description": "Example commands or snippets."
    },
    "references": {
      "type": "string",
      "default": "",
      "description": "External references or links."
    },
    "related_docs": {
      "type": "string",
      "default": "",
      "description": "Related internal docs or files."
    }
  },
  "required": [
    "docs_slug",
    "doc_title",
    "feature_summary"
  ]
}
